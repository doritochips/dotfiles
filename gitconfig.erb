[user]
    name  = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
    email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[core]
    excludesfile = <%= ENV['HOME'] %>/.gitignore
    pager        = less -+FRSX -FRX
    editor       = vim
    autocrlf     = input
    safecrlf     = true
    whitespace   = cr-at-eol
[alias]
    alias   = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\t=> \\2/' | sort
    br      = branch
    changes = diff --stat -r
    ci      = commit
    co      = checkout
    dc      = diff --cached
    delete  = !git ls-files -z --deleted | xargs -0 git rm
    dt      = difftool
    l       = "!git log --graph --pretty='tformat:%C(yellow)%h{%C(green)%ar{%C(bold blue)%an{%C(red)%d%C(reset) %s' $* | column -t -s '{' | less -FXRS"
    last    = log --stat -1
    lg      = log --graph --pretty=format:'%Cred%h%Creset %an -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    ls-ignored = ls-files --exclude-standard --ignored --others
    mf      = merge --no-ff
    news    = log -p HEAD@{1}..HEAD@{0}
    oneline = log --pretty=oneline
    pb      = pull --rebase
    pick    = cherry-pick
    rbs     = !sh -c 'git co $1 && git pull && git co @{-1} && git rebase -i $1' -
    sb      = show-branch
    st      = status
    svn-pb   = svn rebase
    svn-pull = svn fetch
    svn-push = svn dcommit
    unstage = reset HEAD --
    wdiff   = diff --word-diff
[merge]
    tool = vimdiff
    conflictstyle = diff3
[push]
    default = tracking
[color]
    ui = true
[i18n]
    commitEncoding = utf8
    logOutputEncoding = utf8
