[user]
    name  = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
    email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[core]
    excludesfile = <%= ENV['HOME'] %>/.gitignore
    pager        = less -+FRSX -FRX
    editor       = vim
    autocrlf     = input
    safecrlf     = true
    whitespace   = cr-at-eol
[alias]
    st      = status
    ci      = commit
    br      = branch
    co      = checkout
    sb      = show-branch
    mf      = merge --no-ff
    pb      = pull --rebase
    lg      = log --stat
    last    = log --stat -1

    wdiff   = diff --word-diff
    changes = diff --stat -r
    unstage = reset HEAD --
    oneline = log --pretty=oneline
    type    = cat-file -t
    dump    = cat-file -p

    delete  = !git ls-files -z --deleted | xargs -0 git rm
    alias   = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\t=> \\2/' | sort
    rbs     = !sh -c 'git co $1 && git pull && git co @{-1} && git rebase -i $1' -
    hist    = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad,%an)%Creset' --abbrev-commit --date=short

    svn-pull = svn fetch
    svn-pb   = svn rebase
    svn-push = svn dcommit
[merge]
    tool = vimdiff
    conflictstyle = diff3
[push]
    default = tracking
[color]
    ui = true
[i18n]
    commitEncoding = utf8
    logOutputEncoding = utf8
